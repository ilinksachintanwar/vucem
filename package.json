{
  "name": "playwright-bdd-framework",
  "version": "1.0.0",
  "description": "BDD Testing Framework with Playwright and Cucumber.js",
  "main": "index.js",
  "scripts": {
    "test": "npx cucumber-js",
    "test:headless": "HEADLESS=true npx cucumber-js",
    "test:firefox": "BROWSER=firefox npx cucumber-js",
    "test:webkit": "BROWSER=webkit npx cucumber-js",
    "test:firefox:headless": "BROWSER=firefox HEADLESS=true npx cucumber-js",
    "test:google": "npx cucumber-js features/googleSearch.feature",
    "test:tags": "npx cucumber-js --tags",
    "test:google-tag": "npx cucumber-js --tags \"@google\"",
    "test:report": "npx cucumber-js --format @cucumber/pretty-formatter --format allure-cucumberjs",
    "test:parallel": "node src/scripts/run-parallel.js",
    "test:parallel:features": "node src/scripts/run-parallel.js",
    "test:parallel:economia": "node src/scripts/run-parallel.js --folders ECONOMIA",
    "test:parallel:hacienda": "node src/scripts/run-parallel.js --folders HACIENDA",
    "test:parallel:espanol": "node src/scripts/run-parallel.js --folders ESPANOL",
    "test:parallel:all": "node src/scripts/run-parallel.js --folders ECONOMIA,HACIENDA,ESPANOL",
    "test:parallel:workers": "node src/scripts/run-parallel.js --folders ECONOMIA,HACIENDA,ESPANOL --workers 2",
    "report": "allure generate ./allure-results --clean -o ./allure-report && allure open ./allure-report",
    "report:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "report:open": "allure open ./allure-report",
    "report:serve": "allure serve ./allure-results",
    "postinstall": "npx playwright install",
    "cleanup": "node -e \"require('./src/utils/CleanupHelper').cleanupOldScreenshots();\""
  },
  "keywords": [
    "playwright",
    "cucumber",
    "bdd",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@cucumber/cucumber": "^9.1.2",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@playwright/test": "^1.35.1",
    "allure-cucumberjs": "^2.4.0",
    "allure-playwright": "^2.4.0",
    "csv-parse": "^5.3.10",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "winston": "^3.9.0"
  }
} 